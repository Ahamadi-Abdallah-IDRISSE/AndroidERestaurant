<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity"
    tools:layout_editor_absoluteX="23dp"
    tools:layout_editor_absoluteY="49dp">

    <Button
        android:id="@+id/bouttonPlats"
        android:layout_width="@dimen/longeur_button"
        android:layout_height="@dimen/hauteur_boutton"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/vert_Fonce"
        android:text="@string/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <Button
        android:id="@+id/bouttonEntrees"
        android:layout_width="@dimen/longeur_button"
        android:layout_height="@dimen/hauteur_boutton"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/vert_Fonce"
        android:text="@string/starter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582" />

    <Button
        android:id="@+id/bouttonDesserts"
        android:layout_width="@dimen/longeur_button"
        android:layout_height="@dimen/hauteur_boutton"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/vert_Fonce"
        android:text="@string/finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toTopOf="@+id/bouttonEntrees"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_biryani" />

</androidx.constraintlayout.widget.ConstraintLayout>